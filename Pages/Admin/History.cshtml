@page
@model AppManager.Pages.Admin.HistoryModel
@{
    ViewData["Title"] = "Startverlauf";
}

<h2>Startverlauf</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ApplicationId</th>
            <th>UserId</th>
            <th>Startzeitpunkt</th>
            <th>Grund</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.History != null && Model.History.Any())
        {
            foreach (var item in Model.History)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ApplicationId</td>
                    <td>@item.UserId</td>
                    <td>@item.LaunchTime.ToString("g")</td>
                    <td>@item.Reason</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Keine Eintr√§ge gefunden.</td>
            </tr>
        }
    </tbody>
</table>
