@page
@model AppManager.Pages.Admin.DashboardModel
@using AppManager.Models
@using Microsoft.AspNetCore.Authorization

<h2>üìã App Dashboard</h2>

@if (User.Identity?.IsAuthenticated == true)
{
    <p class="text-success">Willkommen, @User.Identity.Name</p>
}
else
{
    <p class="text-muted"><em>Du bist nicht eingeloggt.</em></p>
}

<!-- Karten-Ansicht -->
<div class="row">
    @foreach (var app in Model.Applications)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">@app.Name</h4>
                    <p>Status:
                        @if (app.IsStarted)
                        {
                            <span style="color:green;">üü¢ Gestartet</span>
                        }
                        else
                        {
                            <span style="color:red;">üî¥ Gestoppt</span>
                        }
                    </p>
                    @if (app.RestartRequired)
                    {
                        <p style="color:orange;">‚ö†Ô∏è Neustart erforderlich</p>
                    }
                    <!-- Korrigierte Forms: -->
                    <form method="post" asp-page-handler="Start" style="display:inline;">
                        <input type="hidden" name="appId" value="@app.Id" />
                        <input type="text" name="customReason" placeholder="Grund (optional)"
                            style="width:200px; margin-bottom:5px;" />
                        <button type="submit" class="btn btn-success">‚ñ∂Ô∏è Start</button>
                    </form>

                    <form method="post" asp-page-handler="Stop" style="display:inline;">
                        <input type="hidden" name="appId" value="@app.Id" />
                        <input type="text" name="customReason" placeholder="Grund (optional)"
                            style="width:200px; margin-bottom:5px;" />
                        <button type="submit" class="btn-stop">‚èπÔ∏è Stop</button>
                    </form>

                    <form method="post" asp-page-handler="Restart" style="display:inline;">
                        <input type="hidden" name="appId" value="@app.Id" />
                        <input type="text" name="customReason" placeholder="Grund (optional)"
                            style="width:200px; margin-bottom:5px;" />
                        <button type="submit" class="btn-restart">üîÑ Restart</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Tabellen-Ansicht -->
<h3 class="mt-4">Tabellen-Ansicht</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Neustart erforderlich</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model.Applications)
        {
            <tr>
                <td>@app.Name</td>
                <td>
                    @if (app.IsStarted)
                    {
                        <span style="color:green;">Gestartet</span>
                    }
                    else
                    {
                        <span style="color:red;">Gestoppt</span>
                    }
                </td>
                <td>
                    @if (app.RestartRequired)
                    {
                        <span style="color:orange;">Ja</span>
                    }
                    else
                    {
                        <span>Nein</span>
                    }
                </td>
                <td>
                    <form method="post" style="display:inline;">
                        <input type="hidden" name="AppId" value="@app.Id" />
                        <button name="action" value="start" class="btn btn-success btn-sm">Start</button>
                        <button name="action" value="stop" class="btn btn-danger btn-sm">Stop</button>
                        <button name="action" value="restart" class="btn btn-warning btn-sm">Neustart</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Start-Historie au√üerhalb der App-Tabelle -->
<h3 class="mt-5">üïì Start-Historie</h3>
@if (Model.LaunchHistory?.Any() == true)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>App</th>
                <th>Aktion</th>
                <th>Benutzer</th>
                <th>Zeitpunkt</th>
                <th>Grund</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.LaunchHistory)
            {
                <tr>
                    <td>@(entry.Application?.Name ?? "Unbekannt")</td>
                    <td>
                        @if (entry.Action == "Start")
                        {
                            <span class="badge bg-success">‚ñ∂Ô∏è Start</span>
                        }
                        else if (entry.Action == "Stop")
                        {
                            <span class="badge bg-danger">‚èπÔ∏è Stop</span>
                        }
                        else if (entry.Action == "Restart")
                        {
                            <span class="badge bg-warning">üîÑ Restart</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@entry.Action</span>
                        }
                    </td>
                    <td>
                        @if (entry.User != null)
                        {
                            <span>@entry.User.Vorname @entry.User.Nachname</span>
                        }
                        else
                        {
                            <span class="text-muted">System</span>
                        }
                    </td>
                    <td>@entry.LaunchTime.ToString("dd.MM.yyyy HH:mm:ss")</td>
                    <td>@entry.Reason</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted"><em>Keine Start-Historie vorhanden.</em></p>
}








